<%= form_for([@hospital, @hospital.reviews.build]) do |f| %>

  <div class="field">
    <%= f.label :"제목" %><br>
    <%= f.text_field :r_title %>
  </div>
  <div class="field">
    <%= f.label :"내용" %><br>
    <%= f.text_area :r_content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
