                <div id = "<%= h.h_name %>">
                    <a href = "/hospitals/<%= h.id %>" id = "h_index">
                        <div class = "h_body" id = "<%= h.h_name %>">
                            <div id = "h_name">
                                <%= h.h_name %>
                            </div>

                            <div id = "h_address">
                                <%= h.h_address %>
                            </div>

                            <div id = "h_phone">
                                <%= h.h_phone %>
                            </div>
                        </div>
                        <br>
                    </a>
                </div>
            <% end %>
        </div>
