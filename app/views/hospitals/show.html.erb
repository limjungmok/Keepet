<html>
<head>
	<title></title>
</head>
<body>
	<div class="row", id="hospital_info">
	  <div class="col-md-4", id="hospital_album">
		<%= image_tag "hospital1.JPG" , :width => "280px", :height => "280px" %>
	  </div>
	  <div class="col-md-8", id="hospital_detail">
		<div id="hospital_detail_name"><%=@hospital.h_name %></div><br>
		<div id="hospital_detail_address">병원주소 : <%=@hospital.h_address %></div>
		<div id="hospital_detail_phone">병원번호 : <%=@hospital.h_phone %></div><br>
		
	  </div>
	</div>


	<div id="hospital_option">
		<ul class="nav nav-tabs">
			<li class="active">
				<a href="#calendar" data-toggle="tab" aria-expanded="false">예약 리스트</a>
			</li>
		    <li><a href="#question" data-toggle="tab">질문게시판</a></li>
			<li><a href="#review" data-toggle="tab">후기게시판</a></li>
	  	</ul>

		<div id="myTabContent" class="tab-content">
			<div class="tab-pane fade active in" id="calendar">
				<div>
					<%= month_calendar events: @meetings do |date, meetings| %>
					  <%= date.strftime("%d") %>
					  
					  <% meetings.each do|meeting| %>
					  	<div id="meeting_title">
					  	<%= meeting.name %><br>
					  	</div>
					  <% end %>

					<% end %>
				</div>

				<div id="reservation">
					<%= link_to "예약하기",'#',class:"btn btn-default",id:"btn_reservation" %>
				</div>
			</div>
  			<div class="tab-pane fade" id="question">
  				질문게시판
			</div>
  			<div class="tab-pane fade" id="review">
  				후기게시판
  			</div>

		</div>
	</div>


</body>
</html>