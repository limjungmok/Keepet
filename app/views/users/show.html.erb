<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% if logged_in? %>
          <li><%= link_to "내 정보 변경", edit_user_path(current_user) %></li>
      <% end %>
    </section>
  </aside>
</div>
